<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <TextView
        android:id="@+id/selected_marks_list_item_number_id"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:layout_marginStart="32dp"
        android:background="@drawable/red_circle_mark"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_mark_line_id"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/selected_mark_string_id"
        tools:text="1" />

    <TextView
        android:id="@+id/selected_mark_string_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:textColor="@color/blackText"
        android:textSize="22sp"
        app:layout_constraintEnd_toStartOf="@+id/selected_mark_time_to_deliver_id"
        app:layout_constraintStart_toEndOf="@+id/selected_marks_list_item_number_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11154787" />

    <TextView
        android:id="@+id/selected_mark_name_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/greyText"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/selected_mark_address_id"
        app:layout_constraintStart_toStartOf="@+id/selected_mark_string_id"
        app:layout_constraintTop_toBottomOf="@+id/selected_mark_string_id"
        tools:text="NANANANA" />

    <TextView
        android:id="@+id/selected_mark_address_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/greyText"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@+id/selected_mark_time_interval_id"
        app:layout_constraintStart_toStartOf="@+id/selected_mark_string_id"
        app:layout_constraintTop_toBottomOf="@+id/selected_mark_name_id"
        tools:text="Isahakyan 21" />

    <TextView
        android:id="@+id/selected_mark_time_to_deliver_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/greenTime"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_mark_string_id"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="10:23" />

    <TextView
        android:id="@+id/selected_mark_time_interval_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/greyText"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_mark_address_id"
        app:layout_constraintEnd_toEndOf="@+id/selected_mark_time_to_deliver_id"
        tools:text="10:00-12:00" />

    <View
        android:id="@+id/selected_mark_line_id"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:background="@color/greySigns"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/selected_mark_string_id"
        app:layout_constraintTop_toBottomOf="@+id/selected_mark_address_id" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_mark_nav_sign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:drawableTop="@drawable/navigation_svg"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/navigate"
        android:textAllCaps="true"
        android:textColor="@color/blueSigns"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/selected_mark_check_sign_id"
        app:layout_constraintEnd_toStartOf="@id/selected_mark_check_sign_id"
        app:layout_constraintTop_toTopOf="@+id/selected_mark_check_sign_id" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/selected_mark_check_sign_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:drawableTop="@drawable/check_sign_bold_svg"
        android:drawablePadding="6dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/finish"
        android:textAllCaps="true"
        android:textColor="@color/blueSigns"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/selected_mark_line_id" />

</androidx.constraintlayout.widget.ConstraintLayout>