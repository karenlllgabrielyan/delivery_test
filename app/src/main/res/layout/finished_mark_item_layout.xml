<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/finished_marks_list_item_number_id"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/check_circle_svg"
        android:layout_marginStart="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/finished_mark_address_id"
        app:layout_constraintTop_toTopOf="@+id/finished_mark_string_id" />

    <TextView
        android:id="@+id/finished_mark_string_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/white"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/finished_marks_list_item_number_id"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="11154787" />

    <TextView
        android:id="@+id/finished_mark_name_id"
        app:layout_constraintTop_toBottomOf="@+id/finished_mark_string_id"
        app:layout_constraintStart_toStartOf="@id/finished_mark_string_id"
        app:layout_constraintEnd_toEndOf="@id/finished_mark_string_id"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        tools:text="NANANANA"
        android:textColor="@color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/finished_mark_address_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:layout_marginBottom="16dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/finished_mark_string_id"
        app:layout_constraintStart_toStartOf="@id/finished_mark_string_id"
        app:layout_constraintTop_toBottomOf="@+id/finished_mark_name_id"
        tools:text="Isahakyan 21" />

</androidx.constraintlayout.widget.ConstraintLayout>